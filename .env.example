# App environment: local | staging | prod
APP_ENV=local

# Local default (SQLite)
DATABASE_URL=sqlite:///data/geo_mentor.db

# Optional: comma-separated origins, or *
CORS_ALLOW_ORIGINS=*

# Optional: seed all content on startup (use false in production)
SEED_ON_START=false

# Required in staging/prod: token signing secret (set a long random string)
SESSION_SECRET=dev-session-secret-change-me

# Optional: token TTL in seconds (default 7 days)
SESSION_TTL_SECONDS=604800

# Local run port
PORT=8000
